{
  "name": "led-controller",
  "version": "1.0.0",
  "description": "LED serial port controller",
  "author": "sb",
  "main": "main/main.js",
  "scripts": {
    "dev": "concurrently \"vite --host\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "pack": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.archidtech.ledcontroller",
    "productName": "Led Controller",
    "files": [
      "dist/**/*",
      "main/**/*",
      "backend/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.11.0",
    "vite": "^6.3.5",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@serialport/list": "^13.0.0",
    "serialport": "^13.0.0"
  }
}
